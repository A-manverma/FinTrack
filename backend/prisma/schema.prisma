generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  SYSTEM_ADMIN
}

enum GroupRole {
  GROUP_ADMIN
  MEMBER
}

enum CategoryType {
  FOOD
  RENT
  GROCERY
  TRAVEL
  UTILITY
  ENTERTAINMENT
  OTHER
}

enum ExpenseType {
  PERSONAL
  FAMILY
  GROUP
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  name          String
  role          Role           @default(USER)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  groups        GroupMember[]
  expenses      Expense[]      @relation("ExpenseOwner")
  payments      Expense[]      @relation("ExpensePayer")
  auditLogs     AuditLog[]
  settlementsAsPayer Settlement[] @relation("SettlementPayer")
  settlementsAsReceiver Settlement[] @relation("SettlementReceiver")
}

model Group {
  id          String        @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  members     GroupMember[]
  expenses    Expense[]
  settlements Settlement[]
}

model GroupMember {
  id        String    @id @default(uuid())
  role      GroupRole @default(MEMBER)
  joinDate  DateTime  @default(now())
  userId    String
  groupId   String
  user      User      @relation(fields: [userId], references: [id])
  group     Group     @relation(fields: [groupId], references: [id])

  @@unique([userId, groupId])
}

model Expense {
  id          String       @id @default(uuid())
  amount      Float
  description String?
  date        DateTime     @default(now())
  type        ExpenseType  @default(PERSONAL)
  category    CategoryType @default(OTHER)
  ownerId     String
  payerId     String
  groupId     String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  owner       User         @relation("ExpenseOwner", fields: [ownerId], references: [id])
  payer       User         @relation("ExpensePayer", fields: [payerId], references: [id])
  group       Group?       @relation(fields: [groupId], references: [id])
}

model Settlement {
  id          String   @id @default(uuid())
  amount      Float
  status      String   @default("PENDING") // PENDING, SETTLED
  payerId     String
  receiverId  String
  groupId     String?
  date        DateTime @default(now())

  payer       User   @relation("SettlementPayer", fields: [payerId], references: [id])
  receiver    User   @relation("SettlementReceiver", fields: [receiverId], references: [id])
  group       Group? @relation(fields: [groupId], references: [id])
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  entity    String
  entityId  String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  timestamp DateTime @default(now())
}
